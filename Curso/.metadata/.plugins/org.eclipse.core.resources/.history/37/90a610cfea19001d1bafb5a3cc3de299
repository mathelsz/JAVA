package Fundamentos.Operadores;

import java.util.Scanner;

public class desafioLogicos {
	public static void main(String[] args) {
		// Trabalho na terça (V ou F)
		// Trabalho na quinta(V ou F)
		
		
		boolean trabalho1 = true;
		boolean trabalho2 = true;
		
		Scanner entrada = new Scanner(System.in);
		
		System.out.print("Entregou o trabalho de terça? ");
		 String resposta1 = entrada.nextLine();
		
		System.out.print("Entregou o trabalho de quinta? ");
		 String resposta2 = entrada.nextLine();
		
		boolean entrega = trabalho1 && trabalho2;
		
		System.out.println("Vamos comprar a TV de 50'? " + entrega);
		
		if(!entrega == true) {
			System.out.println("\nNão entregou os trabalhos, por tanto nao vai tomar sorvete");
		}
		else {
			System.out.println("\nVamos todos tomar sorteve!!");
		}
		
		
		
	}
}
