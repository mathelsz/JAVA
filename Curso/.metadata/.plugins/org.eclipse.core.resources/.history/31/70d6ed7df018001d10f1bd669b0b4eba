package Fundamentos;

import java.util.Scanner;

public class desafioConversao {
	public static void main(String[] args) {
		
		Scanner entrada = new Scanner(System.in);
		
		System.out.print("Digite seu salario: ");
		String salario1 = entrada.nextLine();
		
		System.out.print("Digite penultimo salario: ");
		String salario2 = entrada.nextLine();
		
		System.out.print("Digite antipenultimo salario: ");
		String salario3 = entrada.nextLine();
		
		float num1 = Float.parseFloat(salario1);
		float num2 = Float.parseFloat(salario2);
		float num3 = Float.parseFloat(salario3);
		
		double media = (num1 + num2 + num3 / 3);
		System.out.println("A sua media salarial sua dos ultimos 3 meses Ã©: " + media);
	}

}
