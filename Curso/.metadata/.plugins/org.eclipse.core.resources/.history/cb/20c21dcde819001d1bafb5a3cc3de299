package Fundamentos.Operadores;

public class desafioLogicos {
	public static void main(String[] args) {
		// Trabalho na terça (V ou F)
		// Trabalho na quinta(V ou F)
		
		
		boolean trabalho1 = true;
		boolean trabalho2 = false;
		
		boolean entrega = trabalho1 || trabalho2;
		boolean entrega2 = trabalho1 ^ trabalho2;
		System.out.println("Vamos comprar a TV de 50'? " + !entrega2);
		if(entrega == false) {
			System.out.println("\nNão entregou os trabalhos, por tanto nao vai tomar sorvete");
		}
		else {
			System.out.println("Vamos todos tomar sorteve!!");
		}
		
		
		
	}
}
